{
  "manifest_version": 3,
  "name": "싱글벙글",
  "description": "Single Bungle Chrome Extension",
  "icons": {
    "16": "./images/icon-16.png",
    "32": "./images/icon-32.png",
    "48": "./images/icon-48.png",
    "128": "./images/icon-128.png"
  },
  "version": "1.0",
  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": "./images/icon-128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "./scripts/content.js",
        "./scripts/dragDropHandler.js",
        "./scripts/directoryHandler.js",
        "./scripts/imageSaveHandler.js",
        "./scripts/keyDownHandler.js"
      ],
      "css": ["./scripts/content.css", "styles.css"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*", "fonts/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["activeTab", "scripting", "storage", "tabs", "identity", "contextMenus"]
}
